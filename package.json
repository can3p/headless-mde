{
  "name": "headless-mde",
  "type": "module",
  "version": "0.1.0",
  "description": "UI headless React markdown editor using only textarea",
  "homepage": "https://github.com/can3p/headless-mde",
  "author": "Resetand",
  "license": "MIT",
  "keywords": [
    "react",
    "textarea",
    "markdown",
    "editor",
    "formatting",
    "shortcuts"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "mousetrap": "^1.6.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/common-tags": "^1.8.4",
    "@types/jest": "^29.5.14",
    "@types/mousetrap": "^1.6.15",
    "@types/node": "^22.12.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "common-tags": "^1.8.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "npm-watch": "^0.13.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  },
  "scripts": {
    "lint": "eslint --max-warnings=0 src --fix",
    "build": "tsc",
    "test": "./node_modules/.bin/jest --colors",
    "test:coverage": "npm run test -- --coverage",
    "prepublish": "npm run lint && npm run test -- --watchAll=false && npm run build",
    "start-sandbox": "npm run build; npm --prefix sandbox i -f; npm link sandbox/node_modules/react; npm --prefix sandbox run start",
    "prepare": "husky install"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,tsx,js,jsx"
    }
  }
}
